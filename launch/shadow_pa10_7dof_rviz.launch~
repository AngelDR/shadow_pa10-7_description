	</node>

	<!-- Combine joint values -->
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />

	<!-- Show in Rviz -->
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find shadow_pa10_6dof_description)/launch/shadow_pa10_6dof.rviz"/>

 </launch>
